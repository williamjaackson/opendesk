<div class="max-w-4xl mx-auto py-8 px-4">
  <%= render "shared/breadcrumbs", crumbs: [[@custom_table.name, table_path(@custom_table)]] %>
  <%= render "shared/page_heading", title: "New record" %>

  <%= form_with url: table_records_path(@custom_table) do |form| %>
    <% @columns.each do |column| %>
      <div class="mb-4">
        <%= label_tag "values_#{column.id}", class: "block text-sm font-medium text-gray-700 mb-1" do %>
          <%= column.name %><% if column.required? %><span class="text-red-500 ml-0.5">*</span><% end %>
        <% end %>
        <%= column_value_tag(column, params.dig(:values, column.id.to_s), required: column.required?) %>
        <% @custom_record.errors[:"column_#{column.id}"].each do |message| %>
          <p class="mt-1 text-sm text-red-600"><%= message %></p>
        <% end %>
      </div>
    <% end %>

    <%= render "shared/button", label: "Create record", form: form %>
  <% end %>
</div>
