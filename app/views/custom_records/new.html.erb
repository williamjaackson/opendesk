<div class="max-w-4xl mx-auto py-8 px-4">
  <%= render "shared/breadcrumbs", crumbs: [[@custom_table.name, table_path(@custom_table)]] %>
  <%= render "shared/page_heading", title: "New record" %>

  <%= form_with url: table_records_path(@custom_table), html: { novalidate: true } do |form| %>
    <% if @custom_record.errors[:base].any? %>
      <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-md">
        <p class="text-sm text-red-600"><%= @custom_record.errors[:base].first %></p>
      </div>
    <% end %>

    <% @columns.reject(&:computed?).each_with_index do |column, index| %>
      <div class="mb-4">
        <% unless column.column_type == "boolean" %>
          <%= label_tag "values_#{column.id}", class: "block text-sm font-medium text-gray-700 mb-1" do %>
            <%= column.name %><% if column.required? %><span class="text-red-500 ml-0.5">*</span><% end %>
          <% end %>
        <% end %>
        <%= column_value_tag(column, params.dig(:values, column.id.to_s), required: column.required?, errors: @custom_record.errors[:"column_#{column.id}"].any?, autofocus: index == 0) %>
        <% @custom_record.errors[:"column_#{column.id}"].each do |message| %>
          <p class="mt-1 text-sm text-red-600"><%= message %></p>
        <% end %>
      </div>
    <% end %>

    <div class="flex items-center gap-3">
      <%= render "shared/button", label: "Create record", form: form %>
      <%= render "shared/button", style: "ghost", label: "Cancel", href: table_path(@custom_table) %>
    </div>
  <% end %>
</div>
