<div class="max-w-4xl mx-auto py-8 px-4">
  <%= render "shared/breadcrumbs", crumbs: [[@custom_table.name, custom_table_path(@custom_table)]] %>
  <%= render "shared/page_heading", title: "Record" %>

  <dl class="space-y-4">
    <% @fields.each do |field| %>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= field.name %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @custom_record.custom_values.detect { |v| v.custom_field_id == field.id }&.value.presence || "â€”" %></dd>
      </div>
    <% end %>
  </dl>

  <% if @relationship_sections.any? %>
    <div class="pt-8 space-y-8">
      <% @relationship_sections.each do |section| %>
        <%= render "related_records", section: section, record: @custom_record %>
      <% end %>
    </div>
  <% end %>

  <div class="pt-8">
    <%= button_to "Delete record", custom_record_path(@custom_record),
      method: :delete,
      class: "inline-flex items-center gap-1.5 px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700 transition-colors cursor-pointer",
      data: { turbo_confirm: "Are you sure you want to delete this record?" } %>
  </div>
</div>
