<% active_group = @table_group || @custom_table&.table_group || Current.organisation.table_groups.first %>
<% tables = active_group ? active_group.custom_tables.order(:position) : Current.organisation.custom_tables.order(:position) %>

<nav class="bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center h-10">
      <div class="flex-1 min-w-0 overflow-x-auto scrollbar-hide">
        <div class="flex items-center gap-1"
             data-controller="sortable"
             data-sortable-url-value="<%= reorder_tables_path %>"
             data-sortable-direction-value="horizontal">
          <% tables.each do |table| %>
            <% active = (controller_name == "custom_tables" && params[:slug] == table.slug) || @custom_table&.id == table.id %>
            <%= link_to table_path(table),
              data: { sortable_id: table.id },
              class: "inline-flex items-center gap-1 px-3 py-1.5 text-xs font-medium rounded-md whitespace-nowrap transition-colors select-none #{active ? 'text-gray-900 bg-gray-200' : 'text-gray-500 hover:text-gray-900 hover:bg-gray-100'}" do %>
              <span data-edit-only>
                <%= lucide_icon("grip-vertical", class: "h-3 w-3 text-gray-400 flex-shrink-0") %>
              </span>
              <%= table.name %>
              <% if table.protected? %>
                <%= lucide_icon("lock", class: "h-3 w-3 flex-shrink-0 #{active ? 'text-amber-500' : 'text-gray-400'}") %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div data-edit-only class="flex-shrink-0 pl-3 ml-3">
        <div class="relative flex justify-center w-7">
          <%= link_to new_table_path(group: active_group&.slug), class: "inline-flex items-center justify-center w-7 h-7 rounded-md text-gray-400 hover:text-gray-600 hover:bg-gray-100 transition-colors select-none" do %>
            <%= lucide_icon("plus", class: "h-4 w-4") %>
          <% end %>
          <% if tables.empty? && controller_name == "table_groups" && action_name == "show" %>
            <div class="absolute top-full mt-6 left-0 w-7 flex justify-center">
              <%= render "shared/arrow_hint", label: "click here", direction: "up" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>
