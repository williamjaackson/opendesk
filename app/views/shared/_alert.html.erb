<%# locals: (message:, type: :info) %>
<% colors = case type
  when :info then "bg-blue-50 text-blue-700 border-blue-200"
  when :warning then "bg-yellow-50 text-yellow-700 border-yellow-200"
  when :error then "bg-red-50 text-red-700 border-red-200"
  when :success then "bg-green-50 text-green-700 border-green-200"
  end %>

<div class="rounded-md border px-4 py-3 text-sm <%= colors %>">
  <%= message %>
</div>
