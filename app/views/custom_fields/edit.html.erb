<div class="max-w-4xl mx-auto py-8 px-4">
  <%= render "shared/breadcrumbs", crumbs: [[@custom_table.name, custom_table_path(@custom_table)], ["Edit", edit_custom_table_path(@custom_table)]] %>
  <%= render "shared/page_heading", title: "Edit field" %>

  <%= form_with model: @custom_field, url: custom_field_path(@custom_field) do |form| %>
    <%= render "shared/form_input", form: form, field: :name, label: "Field name", options: { required: true, autofocus: true, placeholder: "e.g. Email, Phone, Status" } %>

    <div class="mb-4">
      <span class="block text-sm font-medium text-gray-700 mb-1">Type</span>
      <span class="block w-full rounded-md border border-gray-200 bg-gray-50 px-3 py-2 text-sm text-gray-500"><%= @custom_field.field_type.capitalize %></span>
    </div>

    <div class="mb-4">
      <%= form.label :required, class: "inline-flex items-center gap-2 text-sm font-medium text-gray-700 cursor-pointer" do %>
        <%= form.check_box :required, class: "rounded border-gray-300 text-gray-900 focus:ring-gray-500" %>
        Required field
      <% end %>
    </div>

    <div class="mb-4">
      <%= form.label :show_on_preview, class: "inline-flex items-center gap-2 text-sm font-medium text-gray-700 cursor-pointer" do %>
        <%= form.check_box :show_on_preview, class: "rounded border-gray-300 text-gray-900 focus:ring-gray-500" %>
        Show on preview
      <% end %>
    </div>

    <%= render "shared/button", label: "Save changes", form: form %>
  <% end %>
</div>
