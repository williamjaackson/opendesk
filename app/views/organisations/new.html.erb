<div class="max-w-4xl mx-auto py-8 px-4">
  <%= render "shared/breadcrumbs", crumbs: [["Organisations", organisations_path]] %>
  <%= render "shared/page_heading", title: "New organisation" %>

  <%= form_with model: @organisation, html: { novalidate: true } do |form| %>
    <%= render "shared/form_input", form: form, field: :name, options: { required: true, autofocus: true } %>

    <div class="flex items-center gap-3">
      <%= render "shared/button", label: "Create organisation", form: form %>
      <%= render "shared/button", style: "ghost", label: "Cancel", href: organisations_path %>
    </div>
  <% end %>
</div>
