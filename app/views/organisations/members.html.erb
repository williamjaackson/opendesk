<div class="max-w-4xl mx-auto py-8 px-4">
  <%= render "shared/breadcrumbs", crumbs: [["Organisations", organisations_path], [@organisation.name, organisation_path(@organisation)]] %>
  <%= render "shared/page_heading", title: "Members" %>

  <div class="space-y-6">
    <div class="bg-white border border-gray-200 rounded-lg p-6">
      <h2 class="text-base font-medium text-gray-900 mb-4">Invite someone</h2>
      <%= form_with model: @invite, url: organisation_invites_path(@organisation), html: { class: "flex gap-3" } do |form| %>
        <div class="flex-1">
          <%= form.email_field :email, placeholder: "Email address", class: "block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-sm focus:outline-none focus:ring-1 focus:border-gray-500 focus:ring-gray-500" %>
        </div>
        <%= form.submit "Send invite", class: "inline-flex items-center gap-1.5 px-4 py-2 bg-gray-900 text-white text-sm font-medium rounded-md hover:bg-gray-800 transition-colors cursor-pointer select-none" %>
      <% end %>
    </div>

    <% if @pending_invites.any? %>
      <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
        <div class="px-6 py-3 bg-gray-50 border-b border-gray-200">
          <h2 class="text-sm font-medium text-gray-700">Pending invitations</h2>
        </div>
        <ul class="divide-y divide-gray-200">
          <% @pending_invites.each do |invite| %>
            <li class="px-6 py-4 flex items-center justify-between">
              <div class="flex items-center gap-3">
                <div class="flex-shrink-0 h-8 w-8 bg-gray-100 rounded-full flex items-center justify-center">
                  <%= lucide_icon("mail", class: "h-4 w-4 text-gray-400") %>
                </div>
                <div>
                  <div class="text-sm text-gray-900"><%= invite.email %></div>
                  <div class="text-xs text-gray-500">Invited <%= time_ago_in_words(invite.created_at) %> ago</div>
                </div>
              </div>
              <%= button_to organisation_invite_path(invite.token), method: :delete, class: "text-sm text-gray-500 hover:text-red-600 cursor-pointer select-none", data: { turbo_confirm: "Cancel this invitation?" } do %>
                Cancel
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
      <div class="px-6 py-3 bg-gray-50 border-b border-gray-200">
        <h2 class="text-sm font-medium text-gray-700">Members (<%= @members.count %>)</h2>
      </div>
      <ul class="divide-y divide-gray-200">
        <% @members.each do |membership| %>
          <li class="px-6 py-4 flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="flex-shrink-0 h-8 w-8 bg-gray-200 rounded-full flex items-center justify-center">
                <span class="text-sm font-medium text-gray-600">
                  <%= membership.user.name&.first&.upcase || membership.user.email_address.first.upcase %>
                </span>
              </div>
              <div>
                <div class="text-sm font-medium text-gray-900">
                  <%= membership.user.name.presence || "No name" %>
                  <% if membership.user == Current.user %>
                    <span class="text-xs text-gray-500">(you)</span>
                  <% end %>
                </div>
                <div class="text-sm text-gray-500"><%= membership.user.email_address %></div>
              </div>
            </div>
            <div class="text-sm text-gray-500">
              Joined <%= membership.created_at.strftime("%b %d, %Y") %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
