<div class="max-w-md mx-auto py-16 px-4">
  <div class="text-center mb-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-2">You're invited!</h1>
    <p class="text-gray-600">
      You've been invited to join <strong><%= @invite.organisation.name %></strong>
    </p>
  </div>

  <% if @email_mismatch %>
    <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-6">
      <p class="text-sm text-amber-800">
        This invitation was sent to <strong><%= @invite.email %></strong>, but you're signed in as <strong><%= Current.user.email_address %></strong>.
      </p>
    </div>

    <div class="space-y-3">
      <%= link_to session_path, data: { turbo_method: :delete }, class: "w-full inline-flex items-center justify-center gap-1.5 px-4 py-2 bg-gray-900 text-white text-sm font-medium rounded-md hover:bg-gray-800 transition-colors select-none" do %>
        Sign out and try again
      <% end %>
    </div>
  <% elsif authenticated? %>
    <div class="space-y-3">
      <%= button_to accept_organisation_invite_path(@invite.token), method: :post, class: "w-full inline-flex items-center justify-center gap-1.5 px-4 py-2 bg-gray-900 text-white text-sm font-medium rounded-md hover:bg-gray-800 transition-colors cursor-pointer select-none" do %>
        Accept invitation
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-sm text-gray-600 mb-6">
      This invitation is for <strong><%= @invite.email %></strong>
    </p>

    <div class="space-y-3">
      <%= link_to new_session_path, class: "w-full inline-flex items-center justify-center gap-1.5 px-4 py-2 bg-gray-900 text-white text-sm font-medium rounded-md hover:bg-gray-800 transition-colors select-none" do %>
        Sign in
      <% end %>
      <%= link_to new_registration_path, class: "w-full inline-flex items-center justify-center gap-1.5 px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors select-none" do %>
        Create an account
      <% end %>
    </div>
  <% end %>
</div>
