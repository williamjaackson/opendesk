<div class="max-w-4xl mx-auto py-8 px-4">
  <h1 class="text-2xl font-bold text-gray-900 mb-4"><%= @custom_table.name %></h1>

  <% if @fields.any? %>
    <%= render "shared/table",
      columns: @fields.map { |field|
        { header: field.name, accessor: ->(record) { record.custom_values.detect { |v| v.custom_field_id == field.id }&.value } }
      },
      rows: @records %>
  <% else %>
    <div class="rounded-lg border border-gray-200 bg-white px-6 py-12 text-center text-sm text-gray-500">
      No fields defined yet. Add fields to start using this table.
    </div>
  <% end %>
</div>
