<div class="max-w-4xl mx-auto py-8 px-4">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-2xl font-bold text-gray-900"><%= @custom_table.name %></h1>
    <div class="flex items-center gap-2">
      <%= link_to export_table_path(@custom_table, format: :csv), class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-gray-600 rounded-md hover:text-gray-900 hover:bg-gray-100 transition-colors select-none" do %>
        <%= lucide_icon("download", class: "h-4 w-4") %>
        <span>Export</span>
      <% end %>
      <%= link_to new_table_csv_import_path(@custom_table), class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-gray-600 rounded-md hover:text-gray-900 hover:bg-gray-100 transition-colors select-none" do %>
        <%= lucide_icon("upload", class: "h-4 w-4") %>
        <span>Import</span>
      <% end %>
      <%= link_to edit_table_path(@custom_table), data: { builder_only: true }, class: "p-1.5 rounded-md text-gray-400 hover:text-gray-600 hover:bg-gray-100 transition-colors select-none" do %>
        <%= lucide_icon("settings", class: "h-4 w-4") %>
      <% end %>
    </div>
  </div>

  <% if @columns.any? %>
    <%= render "shared/table",
      columns: @columns.each_with_index.map { |column, i|
        col = { header: column.name, accessor: ->(record) { format_column_value(column, record.custom_values.detect { |v| v.custom_column_id == column.id }&.value) } }
        col[:link] = ->(record) { table_record_path(@custom_table, record) } if i == 0
        col
      },
      rows: @records,
      actions: [ :view ],
      view_path: ->(record) { table_record_path(@custom_table, record) },
      search_url: table_path(@custom_table),
      create_url: new_table_record_path(@custom_table),
      create_label: "Add record",
      create_builder_only: @custom_table.protected?,
      pagy: @pagy %>
  <% else %>
    <div class="rounded-lg border border-gray-200 bg-white px-6 py-12 text-center">
      <h2 class="text-base font-medium text-gray-900 mb-1">This table needs columns</h2>
      <p class="text-sm text-gray-400 max-w-sm mx-auto">You can't add records until you've defined at least one column. Turn on builder mode to configure your table.</p>
    </div>
  <% end %>
</div>
